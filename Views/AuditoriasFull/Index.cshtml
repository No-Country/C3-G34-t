@using System.Collections
@model IEnumerable<AuditApp.Models.AuditoriasView>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="container">

    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="row">
        <div class="col-sm-6">
            <h3>LISTA DE AUTORIAS</h3>
        </div>
        
    </div>


    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered tabletable-striped">
                <thead>
                    <tr>                        
                        <td>@Html.DisplayNameFor(m => m.PlantaName)</td>
                        <td>@Html.DisplayNameFor(m => m.TipoFormulario)</td>
                        <td>@Html.DisplayNameFor(m => m.Fecha)</td>
                        
                        <td>Acciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.PlantaName</td>
                            <td>@item.TipoFormulario</td>
                            <td>@item.Fecha</td>
                           
                            <td>
                                <a class="btn btn alert-primary" asp-action="Details" asp-controller="@item.controlador" asp-route-id="@item.IdFormulario">Detalle</a>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        }
        else
        {
            <p>En el momento no hay Auditorias que mostrar.</p>
        }


    </div>
</div>
