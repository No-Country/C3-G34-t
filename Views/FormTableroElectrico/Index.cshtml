@model IEnumerable<AuditApp.Models.FormTableroElectrico>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">
    <div class="col-sm-6">
        <h3>AUDITORIAS TABLEROS ELECTRICOS</h3>
    </div>
    <div class="col-sm-6">
        <a class="btn btn alert-success d-block" asp-action="Create" asp-controller="FormTableroElectrico">Agregar FTE</a>
    </div>
</div>

@*<p>
    <a asp-action="Create">Create New</a>
    </p>*@

<div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered tabletable-striped">
                <thead>
                    <tr>
                        <td>@Html.DisplayNameFor(m => m.FormID)</td>
                        <td>@Html.DisplayNameFor(m => m.TableroYSector)</td>
                        <td>@Html.DisplayNameFor(m => m.Fecha)</td>
                        <td>@Html.DisplayNameFor(m => m.Observaciones)</td>
                        @*<td>@Html.DisplayNameFor(m => m.AuditorId)</td>*@
                        <td>Acciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FormID</td>
                            <td>@item.TableroYSector</td>
                            <td>@item.Fecha</td>
                            <td>@item.Observaciones</td>
                            @*<td>@item.AuditorId</td>*@
                            <td>
                                <a class="btn btn alert-primary" asp-action="Details" asp-controller="FormTableroElectrico" asp-route-id="@item.FormID">Detalle</a>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>
        }
        else
        {
            <p>En el momento no hay tableros  que mostrar.</p>
        }


    </div>


