@using System.Collections
@model IEnumerable<AuditApp.Models.FormHyM>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
               ViewData["Title"] = "Herramientas y Máquinas";
   
}
<div class="row">
    <div class="col-sm-12">
        <h3>Listado Auditorías Herramientas y Máquinas </h3>
    </div>
</div>    
<hr />
<div>
    <p>
        <a asp-action="Create" style="font-size: 1.3em; color: blue"><i class="text-primary bi-arrow-right-circle me-1"></i>Nuevo</a>
    </p>
</div>

<div class="container col-12">
    <div class="row">
        @if (Model.Count() > 0)
        {
            <table class="table table-hover table-striped align-middle text-center">
                <thead class="table-light sticky-top">
                    <tr>
                        <th scope="col">@Html.DisplayNameFor(m => m.FormID)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.IdHyM)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.Fecha)</th>
                        <th scope="col">@Html.DisplayNameFor(m => m.Observaciones)</th>
                        @*<td>@Html.DisplayNameFor(m => m.AuditorId)</td>*@
                        <td>Acciones</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.FormID</td>
                            <td>@item.IdHyM</td>
                            <td>@item.Fecha</td>
                            <td>@item.Observaciones</td>
                            @*<td>@item.AuditorId</td>*@
                            <!-- Botón Details -->
                            <td><a class="btn btn alert-primary" asp-action="Details" asp-controller="HyM" asp-route-id="@item.FormID">Detalle</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>En el momento no hay tableros  que mostrar.</p>
        }
    </div>
</div>
